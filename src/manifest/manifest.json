{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.6/MicrosoftTeams.schema.json",
    "manifestVersion": "1.6",
    "id": "{{APPLICATION_ID}}",
    "version": "{{VERSION}}",
    "packageName": "{{PACKAGE_NAME}}",
    "developer": {
        "name": "TBD",
        "websiteUrl": "https://{{HOSTNAME}}",
        "privacyUrl": "https://{{HOSTNAME}}/privacy.html",
        "termsOfUseUrl": "https://{{HOSTNAME}}/tou.html"
    },
    "name": {
        "short": "Questionly",
        "full": "Questionly"
    },
    "description": {
        "short": "Questionly helps AMA hosts and attendees manage and interact with AMA sessions.",
        "full": "Questionly assists AMA hosts and attendees with the tasks associated with conducting an AMA session such as help start an AMA, count attendee votes for questions, track questions, accept new questions, show a leaderboard, etc."
    },
    "icons": {
        "outline": "icon-outline.png",
        "color": "icon-color.png"
    },
    "accentColor": "#F9F9FA",
    "configurableTabs": [],
    "staticTabs": [],
    "bots": [
        {
            "botId": "{{MICROSOFT_APP_ID}}",
            "needsChannelSelector": true,
            "isNotificationOnly": false,
            "scopes": ["team", "groupchat"]
        }
    ],
    "connectors": [],
    "composeExtensions": [
        {
            "botId": "{{MICROSOFT_APP_ID}}",
            "canUpdateConfiguration": true,
            "commands": [
                {
                    "id": "startAMA",
                    "type": "action",
                    "title": "Start AMA",
                    "description": "Run an \"Ask Me Anything\" Poll",
                    "fetchTask": true,
                    "context": ["compose", "message"]
                }
            ]
        }
    ],
    "permissions": ["identity", "messageTeamMembers"],
    "validDomains": ["{{HOSTNAME}}"],
    "showLoadingIndicator": false
}
